@model TrackIt.Models.Ticket

@{
    ViewBag.Title = "TicketDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />

<div class="d-flex  mt-3 ">
    <div class="flex-grow-1">
        <h1 class="text-primary text-center">@Model.Title</h1>
    </div>

    <div >
        <button type="button" class="btn btn-info btn-sm">Edit <i class="far fa-edit"></i></button>
    </div>
</div>






<div class="d-flex justify-content-around mt-5">
    <div>
        <h4>Description</h4>
        <p>@Model.Description</p>
    </div>

    <div>
        <h4>Status</h4>
        <p>@Model.Status.Name</p>
    </div>

    <div>
        <h4>Priority</h4>
        <p>@Model.Priority.Name</p>
    </div>

</div>

